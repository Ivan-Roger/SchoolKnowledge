<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_template_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/user_icon_anonymous" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/login_user_anonymous_name"
        android:id="@+id/user_template_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/user_template_pic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/login_user_anonymous_info"
        android:id="@+id/user_template_info"
        android:layout_below="@+id/user_template_name"
        android:layout_toEndOf="@+id/user_template_pic" />
</RelativeLayout>